<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Arduino USB RGB LED Controller"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArduinoSuperMiniRGBLedControlViaUSB">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ArduinoSuperMiniRGBLedControlViaUSB">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".usb.UsbPermissionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.urobotos.arduino.usb.rgbledcontroller.USB_PERMISSION" />
            </intent-filter>
        </receiver>


    </application>

</manifest>